
{{#shows}}
  <div class="show">
    {{#error}}
      <b>{{ title }}</b>
      <ul><li class="error">{{ error }}</li></ul>
    {{/error}}
    <div class="episodes">
      {{#episodes.length}}
      <b>{{ title }}</b>
      {{/episodes.length}}
      <ul>
      {{#episodes}}
        <li class="episode">
          s{{ season }}e{{ episode }}
          <ul>
          {{#files}}
            {{#links}}
              <li>{{ link }}</li>
            {{/links}}
          {{/files}}
          </ul>
        </li>
      {{/episodes}}
      </ul>
    </div>
  </div>
{{/shows}}
